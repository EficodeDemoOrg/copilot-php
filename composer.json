{
    "name": "copilot-php-demo/simple-task-manager",
    "description": "A simple task manager web application built with PHP",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "vlucas/phpdotenv": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8000 -t .",
        "serve-dev": [
            "@putenv COMPOSER_PROCESS_TIMEOUT=0",
            "php -S localhost:8000 -t ."
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "process-timeout": 0
    }
}
