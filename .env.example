# Copy this file to .env and modify the values as needed

# Application Settings
APP_NAME="Simple Task Manager"
APP_DEBUG=true
APP_ENV=development

# Storage Settings
STORAGE_DRIVER=json
STORAGE_PATH=data/tasks.json

# Logging Settings
LOG_ENABLED=true
LOG_LEVEL=info
LOG_PATH=logs/app.log

# Security Settings
CSRF_PROTECTION=true
XSS_PROTECTION=true
SESSION_LIFETIME=3600

# Development Settings (only use in development)
DISPLAY_ERRORS=true
ERROR_REPORTING=E_ALL
